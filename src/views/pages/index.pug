extends ../partials/base.pug

block container

	doctype html
	html
		head
			style
				include ../css/styles.css
			link(rel='stylesheet' href='https://js.arcgis.com/4.11/esri/themes/dark-blue/main.css')
			link(rel='stylesheet' href='https://s3-us-west-1.amazonaws.com/patterns.esri.com/files/calcite-web/1.2.5/css/calcite-web.min.css')
			script(src='https://s3-us-west-1.amazonaws.com/patterns.esri.com/files/calcite-web/1.2.5/js/calcite-web.min.js')
			script(src='https://js.arcgis.com/4.11/')

			script
				include ../scripts/script.js
		body
			| 
			#header
				h1.avenir-bold United States of Tornado
				h4 Tornadoes in the United States, 2017
			#viewDiv
				#sidebar
					h4.avenir-bold.text-center Query the Tornado layer
					h5 State: 
					select#state(name='state')
						option(value='United States') United States
					h5 Fatalities: 
					input#fatal(type='range' name='Deaths' min='0' max='11' value='0')
					h5 Injuries: 
					input#injury(type='range' name='Injured' min='0' max='88' value='0')
					h5 Loss ($): 
					input#loss(type='range' name='loss' min='0' max='310300000' step='100000' value='0')
					br
					#results
						h5
							span#highlight Highlighting 
							span#torCount
							|  tornadoes that occured in 
							span#state-val.vals United States
							|               which caused 
							br
							span#fatal-val.vals 0
							|  or more deaths, 
							br
							span#injury-val.vals 0
							|  or more injuries, and 
							br
							|               $
							span#loss-val.vals 0
							|  or more in financial losses.
					footer.text-light.text-center
						p
						| Data courtesy of NOAA, National Weather Service and Storm Prediction Center

								

